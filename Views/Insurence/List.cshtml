@model IEnumerable<RadhaCapitalFinance.Core.Entities.FinanceModel>


@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_InsurenceLayout.cshtml";
}
<h2>Customer List</h2>
@if (Model != null && Model.Any())
{
<table class="table table-bordered px-5">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Consent</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
        <tr>
            <td>@item.Id</td>
                <td>@item.Product</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td>@item.Consent</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this record?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    </td>
        </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No data available. </p>
}


