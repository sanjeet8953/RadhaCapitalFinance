    }

    .row.full-width {
        margin: 0;
        padding: 0;
        width: 100%;
    }

        .row.full-width > [class*='col-'] {
            padding: 0;
        }

    .card {
        background: rgba(255,255,255,0.9);
        border: none;
        height: 550px;
        border-radius: 0;
        margin-top: 10px;
    }

    .carousel-inner img {
        height: 550px;
        object-fit: cover;
        border-radius:10px
    }

    main, .wrapper, .content {
        min-height: calc(100vh - 60px);
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    ul li {
        padding-left: 15px;
        font-family: Cascadia Mono;
    }

    /* start card core */
    :root {
        --card-w: 100%;
        --card-h: 360px;
        --radius: 16px;
    }

    .flip-card {
        perspective: 1100px;
        height: var(--card-h);
        cursor: pointer;
    }

    .flip-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        transition: transform .7s cubic-bezier(.2,.8,.2,1);
        border-radius: var(--radius);
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
        background: #fff;
    }

    .flip-card:hover .flip-inner {
        transform: rotateY(180deg);
    }

    /* Mobile click ke liye class */
    .flip-card.flipped .flip-inner {
        transform: rotateY(180deg);
    }

    .flip-face {
        position: absolute;
        inset: 0;
        backface-visibility: hidden;
        border-radius: var(--radius);
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .flip-front img {
        width: 100%;
        height: 160px;
        object-fit: cover;
    }

    .flip-front .cardcontent {
        flex: 1;
        padding: 16px;
        text-align: center;
        display: grid;
        place-content: center;
        gap: 6px;
    }

    .flip-back {
        transform: rotateY(180deg);
        /* background: linear-gradient(135deg, #111827, #1f2937); */
        color: #fff;
        padding: 18px;
        display: grid;
        place-content: center;
        gap: 12px;
        text-align: center;
    }

        .flip-back .btn {
            border-radius: 999px;
            padding: 10px 18px;
        }

    .corner-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 2;
        background: #dc3545;
        color: #fff;
        font-size: .75rem;
        padding: 6px 10px;
        border-radius: 999px;
        box-shadow: 0 2px 8px rgba(0,0,0,.15);
    }

    .heading {
        font-weight: 700;
        margin: 0;
    }

        .heading.orange {
            color: #f97316;
        }

    .small-text {
        color: #6b7280;
        margin: 0;
    }

    .flip-card:focus-within .flip-inner {
        outline: 2px solid #60a5fa;
    }

    @@media (max-width: 575.98px) {
        :root {
            --card-h: 340px;
        }

        .flip-front img {
            height: 140px;
        }

        .flip-card:hover .flip-inner {
            transform: rotateY(180deg);
        }
    }

    .card-bg-color {
        color: white;
        font-size: 14px;
        font-family: 'Times New Roman'
    }
    /* end card part */
