@model IEnumerable<RadhaCapitalFinance.Core.Entities.CommercialModel>
@{
    ViewData["Title"] = "CommercialList";
    Layout = "~/Views/Shared/_InsurenceLayout.cshtml";
    int SrNo = 1;
}

<h2>CommercialList</h2>
@if(Model != null && Model.Any())
{
    <div class="table-responsive">

        <table class="table table-bordered">
            <thead>
               <tr>
                   <th>Sr No</th>
                    <th>BusinessName</th>
                    <th>BusinessType</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>PolicyStartDate</th>
                    <th>PolicyEndDate</th>
                    <th>SumInsured</th>
                    <th>Premium</th>
                   <th>Action</th>
               </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@SrNo</td>
                        <td>@item.BusinessName</td>
                        <td>@item.BusinessType</td>
                        <td>@item.Address</td>
                        <td>@item.Pincode</td>
                        <td>@item.Mobile</td>
                        <td>@item.Email</td>
                        <td>@item.PolicyStartDate.ToString("dd/mm/YYYY")</td>
                        <td>@item.PolicyEndDate.ToString("dd/mm/YYYY")</td>
                        <td>@item.SumInsured</td>
                        <td>@item.Premium</td>
                        <td>
                            <form asp-action="CommercialDataDelete" method="post" asp-route-PolicyId="@item.PolicyId">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    SrNo++;
                }
            </tbody>
        </table>
    </div>
    
}

