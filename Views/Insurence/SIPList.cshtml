@model IEnumerable<RadhaCapitalFinance.Core.Entities.SIPModel>

@{
    ViewData["Title"] = "SIPList";
    Layout = "~/Views/Shared/_InsurenceLayout.cshtml";
    int SrNo = 1;
}

<h1>SIPList</h1>
@if(Model != null && Model.Any())
{
     <div class="border-responsive"> 
        <table class="table table-bordered" style="min-width:800px;">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Name</th>
                    <th>Mobile No</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Gender</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@SrNo</td>
                        <td>@item.Name</td>
                        <td>@item.MobileNo</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.Gender</td>
                        <td>
                        <form asp-action="SIPDataDelete" method="post" asp-route-Id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this record?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        </td>
                    </tr>
                SrNo++;
                }
            </tbody>
        </table>
    </div> 
}

