@model HealthModel
@{
	ViewData["Title"] = "Health";
	Layout = "~/Views/Shared/_InsurenceLayout.cshtml";
}

<style>
	.card-title {
		color: #05A2A8;
		border: 2px solid black;
		border-radius: 20px;
		padding: 5px 10px;
		display: flex;
		justify-content: center;
		margin: 0 auto; /* Center align */
		text-align: center;
	}

