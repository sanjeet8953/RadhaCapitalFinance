									</div>
								</div>
								<div class="col-sm-6">
									<div class="fg">
										@Html.TextBoxFor(m => m.DateOfBirth, new { @class = "fg-input", type = "date", placeholder = " " })
										@Html.LabelFor(m => m.DateOfBirth, new { @class = "fg-label" })
										@Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-6">
									<div class="fg">
										@Html.TextBoxFor(m => m.MobailNo, new { @class = "fg-input", type = "number", placeholder = " " })
										@Html.LabelFor(m => m.MobailNo, new { @class = "fg-label" })
										@Html.ValidationMessageFor(m => m.MobailNo, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="col-sm-6">
