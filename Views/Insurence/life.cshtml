@model RadhaCapitalFinance.Core.Entities.LifeInsurenceModel;
@{
	ViewData["Title"] = "Life";
	Layout = "~/Views/Shared/_InsurenceLayout.cshtml";
}
<style>
	body {
		margin: 0;
		padding: 0;
	}

	.box {
		width: 100%;
		height: 100px;
		background-color: #34649F;
		text-align: center;
		color: white;
		font-size: 30px;
		padding-top: 25px;
	}

	.container-fluid {
		padding: 0;
		margin: 0;
	}

	.box img {
		border-radius: 50px;
	}

	.insu {
		background-color: #2C2A68;
		text-align: center;
		padding: 8px;
		border-radius: 5px;
		margin: 8px 0;
	}

	.term {
		background-color: #2C2A68;
		color: white;
		text-align: center;
		padding: 8px;
		border-radius: 5px;
	}

	.Image {
		width: 100%;
		height: auto;
		margin-top:10px;
	}

	.fg {
		position: relative;
		margin: 0.5rem 0;
	}

	.fg-input {
		width: 100%;
		padding: 10px 12px;
		border: 1.8px solid #c8c8c8;
		border-radius: 8px;
		outline: none;
		font-size: 16px;
		background: #fff;
	}

	.fg-label {
		position: absolute;
		left: 12px;
		top: 10px;
		color: #777;
		font-size: 16px;
		background: #fff;
		padding: 0 4px;
		pointer-events: none;
		transition: 0.2s ease all;
	}

	.fg-input:focus + .fg-label,
	.fg-input:not(:placeholder-shown) + .fg-label {
		top: -10px;
		font-size: 12px;
		color: #0d6efd;
	}

</style>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container-fluid fw-bold">
	<div class="box">
		<marquee behavior="alternate" direction="left" scrollamount="5" style="width:100%; color: white;">
			<img src="~/Images/Lifelogo.jpg" height="40" width="40" /> LIFE INSURANCE
			<img src="~/Images/Lifelogo.jpg" height="40" width="40" />
		</marquee>
	</div>
</div>
<div class="container my-4">
	<div class="row align-items-center">
		<!-- Left Side Image -->
		<div class="col-12 col-md-5 mb-3">
			<img src="~/Images/lifeinsu.jpg" class="Image" alt="Life Insurance" />
		@* 	<img src="~/Images/Life.jpg" class="Image " alt="Life Insurance" /> *@
			
		</div>
		<!-- Right Side Content -->
		<div class="col-12 col-md-7 mx-md-auto">
			<div class="content-container">
				<div class="card">
					<div class="card-body">
						<form method="post">
							<h3>Life Insurance</h3>
							<div class="row">
								<div class="col-sm-6">
									<div class="fg">
										@Html.TextBoxFor(m => m.PolicyHolderName, new { @class = "fg-input", placeholder = " " })
										@Html.LabelFor(m => m.PolicyHolderName, new { @class = "fg-label" })
